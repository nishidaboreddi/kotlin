fun calculate(a: Int, b: Int): Int {
    // Local function to compute the sum
    fun add(x: Int, y: Int): Int {
        return x + y
    }

    // Local function to compute the difference
    fun subtract(x: Int, y: Int): Int {
        return x - y
    }

    return if (a > b) add(a, b) else subtract(a, b)
}

fun main() {
    println(calculate(10, 5)) // Output: 15
    println(calculate(3, 7))  // Output: -4
}
